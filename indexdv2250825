    <script>
        // Логика командного протокола
        function toggleRegistration() {
            const form = document.getElementById('registrationForm');
            const isVisible = form.style.display === 'block';
            form.style.display = isVisible ? 'none' : 'block';
        }

        function register() {
            const fio = document.getElementById('fio').value;
            const email = document.getElementById('email').value;
            const username = document.getElementById('username').value;

            if (!fio || !email || !username) {
                alert('▮✖ ВСЕ ПОЛЯ ДОЛЖНЫ БЫТЬ ЗАПОЛНЕНЫ ✖▮');
                return;
            }

            const crew = JSON.parse(localStorage.getItem('starship_crew') || '[]');
            if (crew.length >= 3) {
                alert('✖ ПРЕВЫШЕН ЛИМИТ РЕГИСТРАЦИЙ НА ДАННОМ ТЕРМИНАЛЕ ✖');
                return;
            }

            const newMember = {
                id: fio,
                frequency: email,
                callsign: username,
                registration_date: new Date().toISOString()
            };

            crew.push(newMember);
            localStorage.setItem('starship_crew', JSON.stringify(crew));

            alert('✅ ПРОТОКОЛ АКТИВИРОВАН! ЧЛЕН ЭКИПАЖА ДОБАВЛЕН');
            cancelRegistration();
        }

        function cancelRegistration() {
            document.getElementById('registrationForm').style.display = 'none';
            document.getElementById('fio').value = '';
            document.getElementById('email').value = '';
            document.getElementById('username').value = '';
        }

        // PWA функционал
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js')
                .then(registration => console.log('Системный протокол активирован'))
                .catch(error => console.log('Ошибка активации протокола'));
        }
    </script>
